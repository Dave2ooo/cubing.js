{
  "formatter": {
    "indentStyle": "space",
    "indentSize": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noDelete": "off",
        "useSimplifiedLogicExpression": "off"
      },
      "nursery": {
        "noUnusedVariables": "off"
      },
      "style": {
        "noNegationElse": "off",
        "noShoutyConstants": "off"
      }
    }
  }
}
