{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useEnumInitializers": "off",
        "noAssignInExpressions": "off"
      },
      "style": {
        "noNegationElse": "off",
        "noShoutyConstants": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "performance": {
        "noDelete": "off"
      }
    },
    "ignore": [
      "./src/cubing/vendor/gpl/cs0x7f/**/*",
      "./src/cubing/vendor/mpl/twsearch/*.js",
      "./src/cubing/vendor/mpl/xyzzy/*.js",
      "./src/sites/experiments.cubing.net/cubing.js/rust/wasm/*.js",
      "./src/sites/experiments.cubing.net/cubing.js/rust/wasm/*.d.ts"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentSize": 2,
    "ignore": [
      "./src/cubing/vendor/gpl/cs0x7f/**/*",
      "./src/cubing/vendor/mpl/twsearch/*.js",
      "./src/cubing/vendor/mpl/xyzzy/*.js",
      "./src/sites/experiments.cubing.net/cubing.js/rust/wasm/*.js",
      "./src/sites/experiments.cubing.net/cubing.js/rust/wasm/*.d.ts"
    ]
  }
}
