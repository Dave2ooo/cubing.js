{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2020",
    "module": "esnext",
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "rootDir": "./",
    "outDir": "./dist",
    "types": [
      "web-bluetooth",
      "dom-speech-recognition"
    ]
  },
  "include": [
    "script",
    "src",
  ],
  "exclude": [
    "script/test/dist/esm", // Avoid indexing `dist`.
    "src/cubing/search/search-worker-inside-generated*"
  ],
  "typedocOptions": {
    "out": "dist/sites/js.cubing.net/cubing/api",
    "categorizeByGroup": false,
    "categoryOrder": [
      // alg
      "Alg",
      "Alg Nodes",
      // bluetooth
      "Smart Puzzles",
      "Keyboard Puzzles",
      "Timers",
      "Robots",
      // puzzle-geometry
      "PuzzleGeometry",
      // twisty
      "TwistyPlayer",
      "Other Custom Elements",
      // puzzles
      "All Puzzles",
      "Specific Puzzles",
      // Other
      "*"
    ],
    "customCss": "./src/docs/js.cubing.net/typedoc-theme.css",
    "name": "cubing.js â€” API Reference",
    "titleLink": "/cubing/api/",
    "readme": "./src/cubing/typedoc-readme.md",
    "includeVersion": true,
    "hideGenerator": true,
    "navigationLinks": {
      "Go to main documentation ðŸ”—": "/cubing/"
    }
  }
}
