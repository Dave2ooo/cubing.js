{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist/tsc",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2020",
    "module": "esnext",
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "error",
    "rootDir": "."
  },
  "include": ["src/**/*"],
  "exclude": [
    "*/index.d.ts",
    "src/static/**/*",
    "src/**/*.spec.ts",
    "src/cubing/solve/worker-inside-generated*",
    "src/cubing/solve/inside/solve/vendor/min2phase/gwt.js"
  ]
}
